<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bs_profileinfosettings_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bs_background"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_logout"
        style="@style/Base.Theme.SmartBudget.TextL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawablePadding="12dp"
        android:paddingVertical="12dp"
        android:text="@string/SettingsLogout"
        app:drawableLeftCompat="@drawable/logout"
        app:drawableTint="@color/dark_grey" />

    <View
        android:layout_width="match_parent"
        android:layout_marginVertical="6dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/light_grey" />

</LinearLayout>