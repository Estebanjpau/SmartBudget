<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/bs_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_change_password"
        style="@style/Base.Theme.SmartBudget.TextL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingVertical="12dp"
        android:text="@string/SettingsChangePassword"
        android:drawablePadding="12dp"
        app:drawableLeftCompat="@drawable/cellphone_key"
        app:drawableTint="@color/dark_grey"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="6dp"
        android:background="@color/light_grey" />

    <TextView
        android:id="@+id/tv_enable_pin"
        style="@style/Base.Theme.SmartBudget.TextL"
        android:layout_width="match_parent"
        android:paddingVertical="12dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawablePadding="12dp"
        android:text="@string/SettingEnablePIN"
        app:drawableTint="@color/dark_grey"
        app:drawableLeftCompat="@drawable/lock_plus" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="6dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/light_grey" />

</LinearLayout>