<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.SmartBudget" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Otros atributos del tema -->
    </style>

    <style name="Base.Theme.SmartBudget.Title">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/manrope_extrabold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.Theme.SmartBudget.Subtitle">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/manrope_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.Theme.SmartBudget.Subtitle2">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/manrope_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.Theme.SmartBudget.Button1">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/manrope_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Base.Theme.SmartBudget.Text">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/manrope_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.Theme.SmartBudget.Paragraph">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/manrope_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Circular</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Circular" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>